#include <stdio.h>
int main()
{
    int n;
    printf("Enter the number of values: ");
    scanf("%d", &n);
    int x[n];
    float y[n][n];
    printf("Enter the values of x: ");
    for(int i = 0; i < n; i++)
        scanf("%d", &x[i]);
    printf("Enter the values of y: ");
    for(int i = 0; i < n; i++)
        scanf("%f", &y[i][0]);

    //Calculate the forward difference table
    for (int i = 1; i < n; i++)
    {
        for (int j = 0; j < n - i; j++)
        {
            y[j][i] = y[j + 1][i - 1] - y[j][i - 1];
        }
    }

    for(int i = 0; i < n; i++)
    {
        printf("%d \t", x[i]);
        for (int j = 0; j < n - i; j++)
        {
            printf("%f \t", y[i][j]);
        }
        printf("\n");
    }

    return 0;
}

